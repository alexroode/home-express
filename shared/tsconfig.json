{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "module": "NodeNext",
        "target": "es6",
        "moduleResolution": "NodeNext",
        "outDir": "../dist/shared",
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "paths": {
            "*": [
                "../node_modules/*",
            ]
        }
    },
    "include": [
        "./**/*"
    ]
}