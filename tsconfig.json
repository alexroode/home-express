{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "paths": {
            "*": [
                "./node_modules/*",
            ]
        }
    },
    "include": [
        "./src/**/*",
        "../shared/**/*"
    ]
}