{
    "compilerOptions": {
        "module": "es2015",
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "bundler",
        "sourceMap": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
        "paths": {
            "*": [
                "./node_modules/*",
            ]
        }
    },
    "include": [
        "./**/*",
        "../shared/**/*"
    ]
}