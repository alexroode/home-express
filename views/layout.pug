doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title} - Alexander Roode
    link(rel='stylesheet', href='/css/main.css')
  body.bg-gray-100(ontouchstart)
    .bg-primary-dark.py-sm-3.py-md-4
      .main-title-container.container-lg.pr-6
        h1.main-title.mb-0 Alexander Roode
        h2.mb-0 Composer
        .navbar-dark.navbar-expand-sm
          button.navbar-toggler.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
    .bg-primary
      .container-lg.px-0
        .navbar.navbar-dark.navbar-expand-sm.p-0
          .navbar-collapse.collapse
            ul.nav.navbar-nav.font-125
              li.nav-item: a.nav-link(href='/') Home
              li.nav-item: a.nav-link(href='/bio') Bio
              li.nav-item: a.nav-link(href='/music') Music
              li.nav-item: a.nav-link(href='/contact') Contact
    block subNav
    main.bg-white.py-sm-3.py-md-4
      .content-container.container-lg
        .main-content
          block content
    footer.py-5
      .container-lg.text-center.text-sm
        p.text-muted Â© 2020 Alexander Roode
    script(src='/main.js')