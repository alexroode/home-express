        .container-lg.px-0
          .navbar.navbar-dark.navbar-expand-md.p-0
            #main-nav.navbar-collapse.collapse
              ul.nav.navbar-nav.font-125
                li.nav-item: a.nav-link(href='/')
                  | Home
                li.nav-item: a.nav-link(href='/bio')
                  | Bio
                li.nav-item: a.nav-link(href='/music')
                  | Music
                li.nav-item: a.nav-link(href='/contact')
                  | Contact
      block subNav
    main.bg-white.py-sm-3.py-md-4
      .content-container.container
        .main-content
          block content
    #cart-app(data-summary)
    footer.py-5
      .container-lg.text-center.text-sm
        p.text-muted Â© 2021 Alexander Roode
