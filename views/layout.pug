  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title} - Alexander Roode
    link(rel="stylesheet", href="/css/main.css")
    script(async src="https://www.googletagmanager.com/gtag/js?id=G-GHTQJD3YTD")
