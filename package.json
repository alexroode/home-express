{
  "name": "alexander-roode",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm run watch",
    "build": "npm run build-webpack && npm run build-ts && npm run tslint",
    "serve": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Webpack, TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-webpack\" \"npm run watch-ts\" \"npm run serve\"",
    "tsc": "tsc",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-webpack": "webpack -p",
    "watch-webpack": "webpack -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Webpack, TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-webpack\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "bootstrap": "^4.4.1",
    "debug": "~4.1.1",
    "express": "~4.17.1",
    "express-promise-router": "^3.0.3",
    "fs-extra": "^9.0.0",
    "jquery": "^3.4.1",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "morgan": "~1.10.0",
    "normalize.css": "^8.0.1",
    "popper.js": "^1.16.1",
    "pug": "^2.0.4",
    "serve-favicon": "~2.5.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.6",
    "@types/fs-extra": "^8.1.0",
    "@types/jquery": "^3.3.35",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.11.1",
    "concurrently": "^5.1.0",
    "css-loader": "^3.5.2",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.3",
    "sass-loader": "^8.0.2",
    "shelljs": "^0.8.3",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "author": "Alexander Roode",
  "license": "ISC",
  "description": "Personal website"
}
