{
  "name": "alexander-roode",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-sass && npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/css/style.scss dist/public/css/style.css",
    "watch-sass": "node-sass -w src/public/css/style.scss dist/public/css/style.css",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "debug": "~3.0.1",
    "express": "~4.15.4",
    "express-promise-router": "^2.0.0",
    "fs-extra": "^4.0.2",
    "lodash": "^4.12.0",
    "moment": "^2.13.0",
    "morgan": "~1.8.2",
    "normalize.css": "^7.0.0",
    "pug": "^2.0.0-rc.4",
    "serve-favicon": "~2.4.4"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.2",
    "@types/express": "^4.0.35",
    "@types/fs-extra": "^4.0.2",
    "@types/jquery": "^2.0.41",
    "@types/lodash": "^4.14.63",
    "@types/node": "^7.0.12",
    "concurrently": "^3.4.0",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "shelljs": "^0.7.7",
    "tslint": "^5.0.0",
    "typescript": "^2.4.0"
  },
  "author": "Alexander Roode",
  "license": "ISC",
  "description": "Personal website"
}
